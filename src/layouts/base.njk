    <!-- End Google Tag Manager -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
  const starRatings = document.querySelectorAll('.star-rating');
  starRatings.forEach(rating => {
    const ratingValue = parseFloat(rating.getAttribute('data-rating'));
    const filledWidth = (ratingValue / 5) * 100;
    rating.style.clipPath = `inset(0 ${100 - filledWidth}% 0 0)`;
  });
});
    </script>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{{ site.title }} - {{ title or meta.title }}</title>
    <link rel="preload" as="style" href="{{ '/dist/app.css' | url }}"/>
    <link rel="stylesheet" href="{{ '/dist/app.css' | url }}"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    {% include "meta.njk" %}
  </head>
  <body>
    <iframe
      src="https://www.googletagmanager.com/ns.html?id=GTM-K4GTT8V"
      height="0"
      width="0"
      style="display:none;visibility:hidden"></iframe>
    <!-- skiplinks -->
    <a href="#main" class="visually-hidden-focusable">Skip to main content</a>
    {% include "header.njk" %}
    <main id="main">
      <div class="container py-4">
        {{ content | safe }}
      </div>
    </main>
    {% include "footer.njk" %}
    <script type="text/javascript" src="{{ '/dist/app.js' | url }}"></script>
    <script type="text/javascript" src="{{ '/js/global.js' | url }}"></script>
  </body>
</html>